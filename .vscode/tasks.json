{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start server",
      "type": "shell",
      "command": "npm run start",
      "options": { "cwd": "${workspaceFolder}/packages/server" },
      "presentation": { "panel": "new" }
    },
    {
      "label": "Watch game",
      "type": "shell",
